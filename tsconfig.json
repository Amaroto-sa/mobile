{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@theme/*": ["theme/*"],
      "@screens/*": ["screens/*"],
      "@navigation/*": ["navigation/*"]
    }
  },
  "include": ["src", "__tests__"],
  "exclude": ["node_modules"]
}
